<% include header %>
    <div class="content">
        <h1>My blog posts</h1>
        <section>
            <% var teller = 1; %>
                <% posts.forEach(function(post){ %>
                    <p>
                        <%- post.date %> :
                            <a class="post-link" href="<%- post.slug %>">
                                <%- post.title %>
                            </a>
                            &mdash;
                            <%- post.summary %>
                    </p>
                    <% if (teller !== posts.length) { %>
                        <span class="divider">* * * * *</span>
                        <% } %>
                            <% teller++;}); %>
        </section>
    </div>

    <% include footer %>
